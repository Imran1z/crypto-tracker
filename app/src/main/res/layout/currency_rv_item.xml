<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/black2"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRLCurrency"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVSymbol"
            android:padding="3dp"
            android:layout_toLeftOf="@id/idTVCurrencyPrice"
            android:layout_margin="2dp"
            android:text="Symbol"
            android:textColor="@color/off_white"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVCurrencyName"
            android:text="Name"
            android:textColor="@color/off_white"
            android:padding="3dp"
            android:layout_margin="2dp"
            android:layout_below="@id/idTVSymbol"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Price"
            android:id="@+id/idTVCurrencyPrice"
            android:textColor="@color/off_white"
            android:layout_marginTop="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:textSize="20sp"
            android:padding="3dp"
            />




    </RelativeLayout>
</androidx.cardview.widget.CardView>